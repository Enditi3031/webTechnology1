                    @Html.ActionLink("Technology", "Index", "Product", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse" style="background:none;">
                <ul class="nav navbar-nav">
                    @if (Session["ID"] == "admin")
                    {
                        <li style=" margin-top: 15px; "><a style="padding: 0px 5px; color: black; text-decoration: none;" href="@Url.Action("Create","Product")">Thêm Sản Phẩm</a></li>
                        <li style=" margin-top: 15px; "><a style="padding: 0px 5px; color: black; text-decoration: none;" href="@Url.Action("Index2","Product")">Chỉnh Sửa Sản Phẩm</a></li>
                        <li style=" margin-top: 15px; "><a style="padding: 0px 5px; color: black; text-decoration: none;" href="@Url.Action("Index","Categories")">Chỉnh Sửa Danh Sách</a></li>
                        <li style=" margin-top: 15px; "><a style="padding: 0px 5px; color: black; text-decoration: none;" href="@Url.Action("DanhsachDH","ShoppingCart")">Lịch Sử Đặt Hàng</a></li>

                    }
                </ul>
                <ul class="nav navbar-var navbar-right">
                    <ul class="navbar" style="display: flex; justify-content: space-between; align-items: center;">
                        <li class="navbar-item">
                            <span>
                                <a href="/ShoppingCart/ShowCart">
                                    <img src="@Url.Content("~/Content/images/giohang.png")" style="height: 30px; width: 30px; margin-top: 0px;   " />

                                </a>
                            </span>
                            @Html.Action("BagCart", "ShoppingCart")
                        </li>
                        <li class="navbar-item"><a href="/LoginUser/RegisterUser"><span ></span>Đăng Ký</a></li>
                        <li class="navbar-item"><a href="/LoginUser/Index"><span ></span>Đăng Nhập</a></li>
                        <li class="navbar-item"><a href="@Url.Action("LogOutUser","LoginUser")">Đăng Xuất</a> </li>

                    </ul>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content" style="margin-bottom: 200px; ">
        @RenderBody()
        <hr />
        
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
