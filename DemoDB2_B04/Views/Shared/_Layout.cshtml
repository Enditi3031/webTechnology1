            margin-right: 10px;
            margin-top: 7px;
            padding: 5px;
        }

        .navbar-header {
            padding: 0px 20px;
            color: white;
            text-decoration: none;
        }

        .navbar-inverse {
            height: 40px;
        }

            .navbar-inverse .navbar-collapse, .navbar-inverse .navbar-form {
                background: #182a3d;
            }

            .navbar-inverse .navbar-collapse, .navbar-inverse .navbar-form {
                border-color: #182a3d;
            }


        body li a {
            color: black;
        }

        .navbar-inverse .navbar-brand {
            color: white;
            margin-top: 15px;
            padding: 0px 20px;
            text-decoration: none
        }

        .navbar-inverse .navbar-nav li a {
            color: white;
        }

        .table th {
            font-size: 18px;
        }

        body {
            background: #f3f3f3;
        }

        .footer1 {
            background: white;
            color: black;
            padding-top: 20px;
            border-top: 1px solid black;
        }

        footer h3 {
            font-family: Montserrat, sans-serif;
            font-weight: 600;
            padding-bottom: 10px;
        }

        footer p {
            font-family: Montserrat sans-serif;
            font-size: 18px;
            font-weight: normal;
        }

        footer li {
            float: none;
            list-style: none;
            display: inline;
        }

            footer li a {
                color: black;
                display: inline-block;
                padding: 12px;
                border: 2px solid;
                border-radius: 50%;
                width: 40px;
                height: 40px;
                margin: 0 9px;
                transition: 0.4s;
                text-decoration: none;
            }

        footer .footer1 ul {
            display: inline;
        }

        footer ul li a:hover {
            background: #000000;
            color: white;
            text-decoration: none;
        }

    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #ffd400; border-color: white;">
        <div class="container">
            <div class="navbar-header">
