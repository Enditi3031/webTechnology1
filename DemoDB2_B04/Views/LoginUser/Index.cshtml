@model DemoDB2_B04.Models.AdminUser

@{
    ViewBag.Title = "FormLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .field-validation-error {
        color: red;
    }
    

</style>
<body style="display: flex; justify-content: center; align-items: center; background: white; ">
    <div style="margin-top: 100px;text-align: center; margin-bottom: 200px;">
        <h2 style=" padding: 30px 0px; font-weight:700">Đăng Nhập</h2>



        @using (Html.BeginForm("LoginAcount", "LoginUser"))
        {
            @Html.AntiForgeryToken()

            <div>
                <tr>
                    <div style="display: flex; margin-left: 400px; padding: 30px 0px; ">
                        <p style="margin:0px;">Tên đăng nhập: </p>
                        <input id="NameUser" name="NameUser" type="text" value="" style="border: 0px; border-bottom: 0.5px solid#00000030; margin-left: 20px; width: 500px; ">
                    <td>@Html.ValidationMessageFor(model => model.NameUser)</td>


            </div>
            </tr>

            <tr>

                <div style="display: flex; margin-left: 400px; padding: 30px 0px; ">
                    <p style=" margin: 0px;">Nhập mật khẩu: </p>
                    <input id="PasswordUser" name="PasswordUser" type="password" value="" style="border: 0px; border-bottom: 0.5px solid#00000030; margin-left: 20px; width: 500px; ">
                <td>@Html.ValidationMessageFor(model => model.PasswordUser)</td>
                @if (ViewBag.ErrorInfo == null)
                {
                    <p>@ViewBag.ErrorInfo</p>
                }
        </div>

        </tr>
        <tr>
            <div style="margin-right: 75px; padding: 20px 0px; margin-bottom: 250px; ">
            <td><a href="@Url.Action("RegisterUser","LoginUser")" style="color: red !important; text-decoration: none; color: black; padding: 6px 40px; border-radius: 10px; ck; margin-left: 10px; background-color: none; font-size: 17px; ">Đăng Ký</a></td>
            <td><input type="submit" value="Đăng Nhập" style=" color: white; padding: 5px 30px; border-radius: 10px; border: 1px; background-color: #0099FF;" /></td>
            </div>
        </tr>

        </div>

    }

    </body>


